<% include ../partials/header %>
  <div class="container">
<h1> Hi there! add a new camp</h1>
<div class="contanier">
<form action="/campgrounds" method="POST">
    <div class="form-group">
    <label for="CampName">Name of Camp</label>
    <input type="text" class="form-control" id="CampName" placeholder="Name" name ="name">
  </div>
    <div class="form-group">
    <label for="CampImageUrl">Image URL of Camp</label>
    <input type="text" class="form-control" id="CampImageUrl" placeholder="image URL " name ="image">
  </div>
    <div class="form-group">
    <label for="CampPrice">Price</label>
    <input type="number" min="1" step="0.5" class="form-control" id="CampPrice" placeholder="price per night" name ="price">
  </div>
    <div class="form-group">
    <label for="CampDesc">description of Camp</label>
    <input type="text" class="form-control" id="CampDesc" placeholder="description " name ="description">
  </div>
  <button type="submit" class="btn btn-primary btn-lg btn-block">Add new Camp</button>
   </div>
</form>
<a href="/campgrounds">Go Back</a>
</div>

<% include ../partials/footer %>